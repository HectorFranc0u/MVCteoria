@model IEnumerable<firstApplication.Models.Professor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfessorNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfessorApellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfessorTitulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfessorLugardeTrabajo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProfessorNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfessorApellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfessorTitulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfessorLugardeTrabajo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProfessorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProfessorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProfessorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
